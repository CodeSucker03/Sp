<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:u="sap.ui.unified"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
>
    <Panel>
        <t:Table
            id="tableLichSu"
            rows="{detailNCC>/lichSuPheDuyet}"
            selectionMode="None"
        >
            <t:extension>
                <OverflowToolbar class="sapMTBHeader-CTX">
                    <Title text="{i18n>lichSuPheDuyet}" />
                    <ToolbarSpacer />
                    <SearchField
                        placeholder="Search"
                        width="250px"
                    />
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column>
                    <Label text="{i18n>nguoiPheDuyet}" />
                    <t:template>
                        <Text text="{detailNCC>Uname}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>version}" />
                    <t:template>
                        <Text text="{detailNCC>VersionNo}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>donViPhuTrach}" />
                    <t:template>
                        <Text text="{detailNCC>ParticiUnit}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>dauViec}" />
                    <t:template>
                        <Text text="{detailNCC>WorkStep}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>nhanXet}" />
                    <t:template>
                        <Text text="{detailNCC>CommentText}" />
                    </t:template>
                </t:Column>
                <t:Column>
                    <Label text="{i18n>trangThaiDuyet}" />
                    <t:template>
                        <ObjectStatus
                            text="{detailNCC>Action}"
                            icon="{parts:['detailNCC>Action'], formatter:'.getApprovalHistory'}"
                            state="{parts:['detailNCC>Action'], formatter:'.getStatusApprovalHistory'}"
                        />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </Panel>
</core:FragmentDefinition>
