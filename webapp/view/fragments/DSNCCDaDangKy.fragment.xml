<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:u="sap.ui.unified"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
>
    <ScrollContainer
        height="800px"
        horizontal="false"
        vertical="true"
    >
        <Table
            id="tableNCCDaDuyet"
            items="{ listNCC>/DSDaDuyetDangKy }"
            mode="SingleSelectLeft"
            itemPress="navGMS"
            selectionChange="onSelectRow"
        >
            <headerToolbar>
                <OverflowToolbar class="sapMTBHeader-CTX">
                    <Label
                        text="{i18n>DSNCCDaDuyetDangKy}"
                        design="Bold"
                    />
                    <ToolbarSpacer />
                    <SearchField
                        id="searchNCCDaDuyet"
                        placeholder="Search"
                        class="sapUiSmallMarginEnd"
                        width="250px"
                    />
                    <MultiComboBox
                        id="comboBoxNCCDaDuyet"
                        items="{listNCC>/status}"
                        placeholder="{i18n>pheDuyetDangKy}"
                        width="250px"
                        class="sapUiSmallMarginEnd"
                    >
                        <core:Item
                            key="{listNCC>key}"
                            text="{listNCC>text}"
                        />
                    </MultiComboBox>
                    <ToolbarSpacer />
                    <Button
                        text="{i18n>timKiem}"
                        type="Emphasized"
                        press="searchNCCDaDuyet"
                    />
                    <Button
                        id="kichHoatNCCDaChon"
                        text="{i18n>kichHoat}"
                        type="Accept"
                        class="sapUiSmallMarginEnd"
                        press=".kichHoatNCCDaDuyet"
                    />
                    <Button
                        id="voHieuHoaNCCDaChon"
                        text="{i18n>voHieuHoa}"
                        type="Reject"
                        press=".voHieuHoaNCCDaDuyet"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column width="12rem">
                    <Text text="{i18n>/tenTaiKhoan}" />
                </Column>
                <Column>
                    <Text text="{i18n>/congTy}" />
                </Column>
                <Column
                    width="12rem"
                    hAlign="Center"
                >
                    <Text text="{i18n>/maNCC}" />
                </Column>
                <Column
                    width="12rem"
                    hAlign="Center"
                >
                    <Text text="{i18n>/ngayCapNhatDangKy}" />
                </Column>
                <Column
                    width="12rem"
                    hAlign="Center"
                >
                    <Text text="{i18n>/status}" />
                </Column>
                <Column>
                    <Text text="{i18n>/diaChi}" />
                </Column>
            </columns>
            <items>
                <CustomListItem />
                <ColumnListItem type="Navigation">
                    <cells>
                        <Link
                            text="{listNCC>Username}"
                            press="navGMSDetail"
                        />
                    </cells>
                    <cells>
                        <Text text="{listNCC>Companyname}" />
                    </cells>
                    <cells>
                        <Text text="{listNCC>Mancc}" />
                    </cells>
                    <cells>
                        <Text text="{listNCC>Ngaypd}" />
                    </cells>
                    <cells>
                        <ObjectStatus
                            text="{parts:['listNCC>Status'],formatter:'.formatStatus1'}"
                            state="{parts:['listNCC>Status'], formatter:'.formatState'}"
                        />
                    </cells>
                    <cells>
                        <Text text="{listNCC>Companyaddress}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </ScrollContainer>
</core:FragmentDefinition>
