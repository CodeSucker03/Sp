<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:u="sap.m.upload"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:c="sap.suite.ui.commons"
    xmlns:unified="sap.ui.unified"
>
    <Panel>
        <HBox
            width="100%"
            justifyContent="SpaceBetween"
        >
            <VBox width="30%">
                <Title text="{i18n>thongTinDangKy}" />
                <Label
                    text="{i18n>tenTaiKhoan}"
                    design="Bold"
                />
                <Text
                    text="{detailNCC>/thongTinDangKy/Username}"
                    class="sapUiMediumMarginBottom"
                />
                <Title text="{i18n>thongTinNhaThau}" />
                <Label
                    text="{i18n>tenCongTy}"
                    design="Bold"
                    class="sapUiSmallMarginBottom"
                />
                <Text
                    text="{detailNCC>/thongTinDangKy/CompanyName}"
                    class="sapUiMediumMarginBottom"
                />
                <Label
                    text="{i18n>maSoThue}"
                    design="Bold"
                    class="sapUiSmallMarginBottom"
                />
                <Text
                    text="{detailNCC>/thongTinDangKy/Taxnumber}"
                    class="sapUiMediumMarginBottom"
                />
                <Label
                    text="{i18n>diaChi}"
                    design="Bold"
                    class="sapUiSmallMarginBottom"
                />
                <Text
                    text="{detailNCC>/thongTinDangKy/CompanyAddress}"
                    class="sapUiMediumMarginBottom"
                />
                <Label
                    text="{i18n>ngayThanhLap}"
                    design="Bold"
                    class="sapUiSmallMarginBottom"
                />
                <Text
                    text="{detailNCC>/thongTinDangKy/ThanhLap}"
                    class="sapUiMediumMarginBottom"
                />
                <Label
                    text="{i18n>website}"
                    design="Bold"
                    class="sapUiSmallMarginBottom"
                />
                <Text
                    text="{detailNCC>/thongTinDangKy/Website}"
                    class="sapUiMediumMarginBottom"
                />
            </VBox>
            <VBox width="30%">
                <Title text="Thông tin người đại diện theo pháp luật" />
                <HBox
                    width="80%"
                    justifyContent="SpaceBetween"
                >
                    <VBox>
                        <Label
                            text="{i18n>danhXung}"
                            design="Bold"
                        />
                        <Text
                            text="{= ${detailNCC>/thongTinDangKy/NddTitle}=== '1' ? 'Ông' :'Baf'}"
                            class="sapUiMediumMarginBottom"
                        />

                        <Label
                            text="{i18n>soDinhDanh}"
                            design="Bold"
                            class="sapUiSmallMarginBottom"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/NddIdnumber}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nguonGioiThieu}"
                            design="Bold"
                            class="sapUiSmallMarginBottom"
                        />
                        <Text text="{detailNCC>/thongTinDangKy/Gioithieu}" />
                    </VBox>
                    <VBox>
                        <Label
                            text="{i18n>hoTen}"
                            design="Bold"
                        />
                        <Text
                            text="{= ${detailNCC>/thongTinDangKy/NddHoten}}"
                            class="sapUiMediumMarginBottom"
                        />

                        <Label
                            text="{i18n>quocTich}"
                            design="Bold"
                            class="sapUiSmallMarginBottom"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/NddNationality}"
                            class="sapUiMediumMarginBottom"
                        />
                    </VBox>
                </HBox>
            </VBox>
            <VBox width="30%">
                <Title text="{i18n>thongTinMoiLienHe}" />
                <HBox
                    width="80%"
                    justifyContent="SpaceBetween"
                >
                    <VBox>
                        <Label
                            text="{i18n>danhXung}"
                            design="Bold"
                        />
                        <Text
                            text="{= ${detailNCC>/thongTinDangKy/DmTitle}=== '1' ? 'Ông' :'Bà'}"
                            class="sapUiMediumMarginBottom"
                        />

                        <Label
                            text="{i18n>Email}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/DmEmail}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>chucVu}"
                            design="Bold"
                        />
                        <Text text="{detailNCC>/thongTinDangKy/DmChucvu}" />
                    </VBox>
                    <VBox>
                        <Label
                            text="{i18n>hoTen}"
                            design="Bold"
                        />
                        <Text
                            text="{= ${detailNCC>/thongTinDangKy/DmHoten}}"
                        />

                        <Label
                            text="{i18n>sdt}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/DmSdt}"
                            class="sapUiMediumMarginBottom"
                        />
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
        <HBox
            alignItems="Baseline"
            justifyContent="SpaceBetween"
        >
            <VBox width="30%">
                <Title
                    text="{i18n>thongTinNangLuc}"
                    class="sapUiMediumMarginTop"
                />
                <VBox>
                    <Label
                        text="{i18n>quyMoNhanSu}"
                        design="Bold"
                    />
                    <Text
                        text="{detailNCC>/thongTinDangKy/Quymo}"
                        class="sapUiMediumMarginBottom"
                    />
                </VBox>
                <Title text="{i18n>thongTinTaiChinh}" />
                <Label
                    text="{i18n>vonDieuLe}"
                    design="Bold"
                />
                <Text
                    text="{detailNCC>/thongTinDangKy/CharterCapital}"
                    class="sapUiMediumMarginBottom"
                />
            </VBox>
            <VBox width="30%">
                <Title
                    text="{i18n>dichVuHangHoaCungCap}"
                    class="sapUiMediumMarginBottom"
                />
                <List
                    items="{detailNCC>/loaiHangHoa}"
                    showSeparators="None"
                >
                    <CustomListItem>
                        <HBox
                            width="100%"
                            justifyContent="SpaceBetween"
                        />
                        <VBox>
                            <Label
                                text="{i18n>nhomHangHoa}"
                                design="Bold"
                            />
                            <Text
                                text="{detailNCC>MatklTxt}"
                                class="sapUiMediumMarginBottom"
                            />
                        </VBox>
                        <VBox>
                            <Label
                                text="{i18n>loaiHangHoa}"
                                design="Bold"
                            />
                            <Text
                                text="{detailNCC>MatklLv1Txt}"
                                class="sapUiMediumMarginBottom"
                            />
                        </VBox>
                        <VBox>
                            <Label
                                text="Hàng hoá"
                                design="Bold"
                            />
                            <Text
                                text="{detailNCC>MatklLv2Txt}"
                                class="sapUiMediumMarginBottom"
                            />
                        </VBox>
                    </CustomListItem>
                </List>
                <Title text="{i18n>phamViCungCap}" />
                <HBox>
                    <Text
                        text="{i18n>toanQuoc}"
                        visible="{= ${detailNCC>/thongTinDangKy1}=== 'X' ? true : false}"
                        class="sapUiSmallMarginEnd"
                    />
                    <Text
                        text="{i18n>mienBac}"
                        visible="{= ${detailNCC>/thongTinDangKy2}=== 'X' ? true : false}"
                        class="sapUiSmallMarginEnd"
                    />
                    <Text
                        text="{i18n>mienTrung}"
                        visible="{= ${detailNCC>/thongTinDangKy3}=== 'X' ? true : false}"
                        class="sapUiSmallMarginEnd"
                    />
                    <Text
                        text="{i18n>mienNam}"
                        visible="{= ${detailNCC>/thongTinDangKy4}=== 'X' ? true : false}"
                        class="sapUiSmallMarginEnd"
                    />
                </HBox>
            </VBox>
            <VBox width="30%" />
        </HBox>
        <HBox
            justifyContent="SpaceBetween"
            class="sapUiMediumMarginTop"
        >
            <VBox width="30%">
                <Title text="{i18n>doanhThu3NamGanNhat}" />

                <HBox
                    justifyContent="SpaceBetween"
                    width="80%"
                    class="sapUiLargeMarginEnd"
                >
                    <VBox>
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/DtYear1}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/DtYear2}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/DtYear3}"
                            class="sapUiMediumMarginBottom"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/DtYear1}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/DtYear2}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/DtYear3}"
                            class="sapUiMediumMarginBottom"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="{i18n>giaTri}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/DtAmount1} {detailNCC>/thongTinDangky/Waers}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/DtAmount2} {detailNCC>/thongTinDangky/Waers}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/DtAmount3} {detailNCC>/thongTinDangky/Waers}"
                            class="sapUiMediumMarginBottom"
                        />
                    </VBox>
                </HBox>
            </VBox>
            <VBox width="30%">
                <Title text="{i18n>loiNhuan3NamGanNhat}" />

                <HBox
                    justifyContent="SpaceBetween"
                    width="80%"
                >
                    <VBox>
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/LnYear1}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/LnYear2}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>nam}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangKy/LnYear3}"
                            class="sapUiMediumMarginBottom"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="{i18n>giaTri}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/LnAmout1} {detailNCC>/thongTinDangky/Waers}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>giaTri}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/LnAmout2} {detailNCC>/thongTinDangky/Waers}"
                            class="sapUiMediumMarginBottom"
                        />
                        <Label
                            text="{i18n>giaTri}"
                            design="Bold"
                        />
                        <Text
                            text="{detailNCC>/thongTinDangky/LnAmout3} {detailNCC>/thongTinDangky/Waers}"
                            class="sapUiMediumMarginBottom"
                        />
                    </VBox>
                    <VBox>
                        <Title text="{i18n>danhSachFile}" />
                        <Label
                            text="{i18n>danhKyKinhDoanh}"
                            design="Bold"
                            class="sapUiSmallMarginEnd"
                        />
                        <List
                            items="{detailNCC>/danhSachDangKyKinhDoanh}"
                            showSeparators="None"
                        >
                            <CustomListItem>
                                <Link
                                    text="{detailNCC>Filename}"
                                    press="download"
                                    class="sapUiSmallMarginBottom"
                                >
                                    <customData>
                                        <core:CustomData
                                            value="{detailNCC>ObjectKey}"
                                        />
                                    </customData>
                                </Link>
                            </CustomListItem>
                        </List>
                        <Label
                            text="Danh sách hợp đồng hàng hoá dịch vụ tương tự trong 3 năm gần nhất"
                            design="Bold"
                        />
                        <List
                            items="{detailNCC>/danhSachHopDong}"
                            showSeparators="None"
                        >
                            <CustomListItem>
                                <Link
                                    text="{detailNCC>Filename}"
                                    press="download"
                                    class="sapUiSmallMarginBottom"
                                >
                                    <customData>
                                        <core:CustomData
                                            value="{detailNCC>ObjectKey}"
                                        />
                                    </customData>
                                </Link>
                            </CustomListItem>
                        </List>
                        <Label
                            text="{i18n>DSGiaiThuongDatDuoc}"
                            design="Bold"
                        />
                        <List
                            items="{detailNCC>/danhSachGiaiThuong}"
                            showSeparators="None"
                        >
                            <CustomListItem>
                                <Link
                                    text="{detailNCC>Filename}"
                                    press="download"
                                    class="sapUiSamllmarginBottom"
                                >
                                    <customData>
                                        <core:CustomData
                                            value="{detailNCC>ObjectKey}"
                                        />
                                    </customData>
                                </Link>
                            </CustomListItem>
                        </List>
                        <Label
                            text="{i18n>cacHoSoChungMinhNangLucKhac}"
                            design="Bold"
                        />
                        <List
                            items="{detailNCC>/danhSachHoSo}"
                            showSeparators="None"
                        >
                            <CustomListItem>
                                <Link
                                    text="{detailNCC>Filename}"
                                    press="download"
                                    class="sapUiSamllmarginBottom"
                                >
                                    <customData>
                                        <core:CustomData
                                            value="{detailNCC>ObjectKey}"
                                        />
                                    </customData>
                                </Link>
                            </CustomListItem>
                        </List>
                        <Label
                            text="{i18n>baoCaoTaiChinh3NamGanNhat}"
                            design="Bold"
                        />
                        <List
                            items="{detailNCC>/baoCaoTaiChinh}"
                            showSeparators="None"
                        >
                            <CustomListItem>
                                <Link
                                    text="{detailNCC>Filename}"
                                    press="download"
