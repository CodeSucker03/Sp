                                >
                                    <customData>
                                        <core:CustomData
                                            value="{detailNCC>ObjectKey}"
                                        />
                                    </customData>
                                </Link>
                            </CustomListItem>
                        </List>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
    </Panel>
</core:FragmentDefinition>
