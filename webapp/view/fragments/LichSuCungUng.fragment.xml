<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:u="sap.ui.unified"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
>
    <Panel>
        <Table
            id="listNCC1"
            items="{detailNCC>/lichSuCungUng}"
            mode="None"
            itemPress="navDetailDonHang"
        >
            <headerToolbar>
                <OverflowToolbar class="sapMTBHeader-CTX">
                    <Label
                        text="{i18n>DSDonHangHoanThanh}"
                        design="Bold"
                    />
                    <ToolbarSpacer />
                    <SearchField
                        placeholder="Search"
                        width="250px"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="{i18n>maGoiMuaSam}" />
                </Column>
                <Column>
                    <Text text="{i18n>tenGoiMuaSam}" />
                </Column>
                <Column>
                    <Text text="{i18n>hinhThucMuaSam}" />
                </Column>
                <Column>
                    <Text text="{i18n>phuongThucMuaSam}" />
                </Column>
                <Column>
                    <Text text="{i18n>diemDanhGia}" />
                </Column>
                <Column>
                    <Text text="{i18n>giaTriDonHang}" />
                </Column>
                <Column>
                    <Text text="{i18n>ngayXacNhan}" />
                </Column>
                <Column>
                    <Text text="{i18n>status}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation">
                    <cells>
                        <Link
                            text="{detailNCC>Magms}"
                            press="navGMSDetail"
                        />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>Tenncc}" />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>htms}" />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>htmsh}" />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>ptms}" />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>diem}" />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>giaTri}" />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>ngay}" />
                    </cells>
                    <cells>
                        <Text text="{detailNCC>trangThai}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</core:FragmentDefinition>
